<?xml version="1.0" encoding="utf-8"?>
<!-- File: res/layout/item_area_user.xml -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:backgroundTint="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <!-- Area icon -->
        <ImageView
            android:id="@+id/ivAreaIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_map_pin_teal"
            android:background="@drawable/circle_teal"
            android:padding="10dp"
            android:contentDescription="Area icon"
            app:tint="@color/teal_500" />

        <!-- Area name and info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ivAreaIcon"
            android:layout_toStartOf="@id/layoutUserCount"
            android:layout_centerVertical="true"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAreaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SBIT"
                android:textSize="16sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active deliverers"
                android:textSize="13sp"
                android:textColor="#757575"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- User count badge -->
        <LinearLayout
            android:id="@+id/layoutUserCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvUserCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="24sp"
                android:textColor="@color/teal_600"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <View
                android:layout_width="32dp"
                android:layout_height="3dp"
                android:background="@color/teal_400"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>