<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:fitsSystemWindows="false"
    tools:context=".OrderActivity">

    <!-- Teal Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_teal_gradient_header"
        android:paddingTop="48dp"
        android:paddingBottom="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button and Title Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="Back"
                android:focusable="true"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back"
                app:tint="#FFFFFF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Title + Priority Toggle Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvRequestsTitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="Create Request"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- Priority Toggle -->
                    <Switch
                        android:id="@+id/priority"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Priority"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:thumbTint="#FFFFFF"
                        android:trackTint="#FFFFFF"/>
                </LinearLayout>

                <!-- Subtitle -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:text="Post a delivery request to campus"
                    android:textColor="#E6FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/btnPlaceNow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main Form Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Item Name Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Item Name"
                        android:textColor="#9CA3AF"
                        android:textSize="11sp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/info_field_bg"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="4dp"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_package"
                            app:tint="#14B8A6"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Item icon"/>

                        <EditText
                            android:id="@+id/item"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="e.g., Lunch, Notebook, Charger"
                            android:inputType="text"
                            android:padding="12dp"
                            android:textSize="15sp"
                            android:textColor="#111827"
                            android:textColorHint="#9CA3AF"
                            android:background="@android:color/transparent" />
                    </LinearLayout>

                    <!-- Pickup Location Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup Location"
                        android:textColor="#9CA3AF"
                        android:textSize="11sp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/info_field_bg"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="4dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_map_pin"
                            app:tint="#6B7280"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Pickup location icon"/>

                        <EditText
                            android:id="@+id/pickup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Location name"
                            android:inputType="text"
                            android:padding="12dp"
                            android:textSize="15sp"
                            android:textColor="#111827"
                            android:textColorHint="#9CA3AF"
                            android:background="@android:color/transparent" />
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/pickupArea"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_bg"
                        android:spinnerMode="dropdown"
                        android:popupBackground="@drawable/spinner_popup_bg"
                        android:dropDownVerticalOffset="4dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/pickup_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#EF4444"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone" />

                    <!-- Drop Location Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Drop Location"
                        android:textColor="#9CA3AF"
                        android:textSize="11sp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/info_field_bg"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="4dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_map_pin"
                            app:tint="#14B8A6"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Drop location icon"/>

                        <EditText
                            android:id="@+id/drop"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Your location"
                            android:inputType="text"
                            android:padding="12dp"
                            android:textSize="15sp"
                            android:textColor="#111827"
                            android:textColorHint="#9CA3AF"
                            android:background="@android:color/transparent" />
                    </LinearLayout>

                    <Spinner
                        android:id="@+id/dropArea"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/spinner_bg"
                        android:spinnerMode="dropdown"
                        android:popupBackground="@drawable/spinner_popup_bg"
                        android:dropDownVerticalOffset="4dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/drop_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#EF4444"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone" />

                    <!-- Delivery Fee Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery Fee (Optional)"
                        android:textColor="#9CA3AF"
                        android:textSize="11sp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/info_field_bg"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="4dp"
                        android:layout_marginBottom="4dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_rupee"
                            app:tint="#14B8A6"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="Currency icon"/>

                        <EditText
                            android:id="@+id/fare"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Enter amount"
                            android:inputType="numberDecimal"
                            android:padding="12dp"
                            android:textSize="15sp"
                            android:textColor="#111827"
                            android:textColorHint="#9CA3AF"
                            android:background="@android:color/transparent" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/fare_error"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#EF4444"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone" />

                    <!-- Request Expires Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Request Expires In"
                        android:textColor="#9CA3AF"
                        android:textSize="11sp"
                        android:layout_marginBottom="12dp"/>

                    <RadioGroup
                        android:id="@+id/deadlineGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">

                        <RadioButton
                            android:id="@+id/deadline_30m"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="30 minutes"
                            android:textSize="15sp"
                            android:textColor="#111827"
                            android:paddingVertical="12dp"
                            android:paddingStart="8dp"
                            android:buttonTint="#14B8A6"
                            android:background="@drawable/radio_item_bg" />

                        <RadioButton
                            android:id="@+id/deadline_1h"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1 hour"
                            android:textSize="15sp"
                            android:textColor="#111827"
                            android:paddingVertical="12dp"
                            android:paddingStart="8dp"
                            android:buttonTint="#14B8A6"
                            android:checked="true"
                            android:background="@drawable/radio_item_bg" />

                        <RadioButton
                            android:id="@+id/deadline_2h"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2 hours"
                            android:textSize="15sp"
                            android:textColor="#111827"
                            android:paddingVertical="12dp"
                            android:paddingStart="8dp"
                            android:buttonTint="#14B8A6"
                            android:background="@drawable/radio_item_bg" />

                        <RadioButton
                            android:id="@+id/deadline_4h"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4 hours"
                            android:textSize="15sp"
                            android:textColor="#111827"
                            android:paddingVertical="12dp"
                            android:paddingStart="8dp"
                            android:buttonTint="#14B8A6"
                            android:background="@drawable/radio_item_bg" />

                        <RadioButton
                            android:id="@+id/deadline_custom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Custom time"
                            android:textSize="15sp"
                            android:textColor="#111827"
                            android:paddingVertical="12dp"
                            android:paddingStart="8dp"
                            android:buttonTint="#14B8A6"
                            android:background="@drawable/radio_item_bg" />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/tvCustomTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#14B8A6"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:paddingStart="32dp"
                        android:paddingTop="4dp" />

                    <!-- Additional Notes Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Additional Notes (Optional)"
                        android:textColor="#9CA3AF"
                        android:textSize="11sp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/info_field_bg"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="4dp">

                        <EditText
                            android:id="@+id/notes"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:hint="Any special instructions..."
                            android:inputType="textMultiLine"
                            android:gravity="top|start"
                            android:padding="12dp"
                            android:textSize="15sp"
                            android:textColor="#111827"
                            android:textColorHint="#9CA3AF"
                            android:background="@android:color/transparent"
                            android:scrollbars="vertical" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- Post Request Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnPlaceNow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#14B8A6"
        android:paddingVertical="14dp"
        android:text="POST REQUEST"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>